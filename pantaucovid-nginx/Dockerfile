FROM bitnami/node:12-prod

ENV MY_ENCODED_VALUE ""
RUN echo $MY_ENCODED_VALUE | base64 -d > /root/install_app.sh
RUN cp /root/install_app.sh /install_app
RUN chmod a+x /install_app
# COPY /home/ibnu_wardy/frappe-sinawardi/install_app.sh /install_app

RUN /install_app pantaucovid https://github.com/iboen/frappe-pantaucovid version-13

FROM frappe/erpnext-nginx:v13

COPY --from=0 /home/frappe/frappe-bench/sites/ /var/www/html/
COPY --from=0 /rsync /rsync
RUN echo -n "\npantaucovid" >> /var/www/html/apps.txt

VOLUME [ "/assets" ]

ENTRYPOINT ["/docker-entrypoint.sh"]
CMD ["nginx", "-g", "daemon off;"]